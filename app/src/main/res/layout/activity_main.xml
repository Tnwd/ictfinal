<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/lessonbutton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginTop="345dp"
        android:background="@drawable/lessonbutton"
        android:contentDescription="@string/todo"
        app:layout_constraintBottom_toTopOf="@+id/quizbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/quizbutton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/quizbutton"
        android:contentDescription="@string/quiz"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lessonbutton"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>